<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amansiol.goonline">
    <!-- internet permission -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- location accessing permission -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/shopreg"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.amansiol.goonline.CodeConfirmActivity"
            android:theme="@style/AppThemeFullScreen"/>
        <activity
            android:name="com.amansiol.goonline.SplashScreen"
            android:theme="@style/AppThemeFullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amansiol.goonline.AddProduct"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.amansiol.goonline.ShopAllProduct"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.amansiol.goonline.ChangeAddressShop"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.amansiol.goonline.ShopProfile"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.amansiol.goonline.DashBoard"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.amansiol.goonline.SettingActivity"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.amansiol.goonline.ShopDetailsActivity"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.amansiol.goonline.SearchActivity"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.amansiol.goonline.ImageBasedSeachActivity"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.amansiol.goonline.ChangePassword"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.amansiol.goonline.FavActivity"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.amansiol.goonline.CartActivity"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.amansiol.goonline.FilteredProduct"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="com.amansiol.goonline.DescriptionActivity"
            android:theme="@style/AppThemeFullScreen"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.amansiol.goonline.RegisterShopActivity"
            android:theme="@style/AppThemeFullScreen"/>

        <service
            android:name="com.amansiol.goonline.services.FetchAddressIntentService"
            android:exported="false" />

        <activity
            android:name="com.amansiol.goonline.NoInternet"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.amansiol.goonline.LocationAccessActivity"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.amansiol.goonline.SignUpActivity"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.amansiol.goonline.SignInActivity"
            android:theme="@style/AppThemeFullScreen" />
        <activity
            android:name="com.amansiol.goonline.MainActivity"
            android:theme="@style/AppThemeFullScreen" />
    </application>

</manifest>